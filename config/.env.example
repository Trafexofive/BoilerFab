# BoilerFab Environment Configuration
# Copy this file to .env and customize for your environment

# Service Configuration
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0
LOG_LEVEL=INFO
DEBUG_MODE=false

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
TRUSTED_HOSTS=localhost,127.0.0.1

# Development
DEV_MODE=false
AUTO_RELOAD=true
SHOW_DOCS=true

# Optional Services (set to enable with profiles)
REDIS_PASSWORD=boilerfab-redis
POSTGRES_PASSWORD=boilerfab-db

# Docker Configuration
COMPOSE_PROJECT_NAME=boilerfab
DOCKER_BUILDKIT=1

# Template Management
TEMPLATE_MAX_SIZE_MB=100
TEMPLATE_CACHE_TTL=3600

# Performance
MAX_CONCURRENT_GENERATIONS=10
CACHE_ENABLED=true

# Lightweight Monitoring (when enabled with --profile monitoring)
DOZZLE_LEVEL=info          # Log viewer verbosity: info, debug, warning, error
UPTIME_KUMA_PORT=3001      # Status page port
LOG_VIEWER_PORT=9999       # Dozzle log viewer port

# Backup Configuration
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30